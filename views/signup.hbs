<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>{{pageTitle}}</title>
  </head>
  <body>

    <!--Signup form here-->
    <h3>Sign up</h3>
    <form id="enter-note">
      <ul>
        <li>
          <label>Name:</label>
          <textarea id="name"></textarea>
        </li>
        <li>
          <label>Email:</label>
          <textarea id="email"></textarea>
        </li>
        <li>
          <label>Password:</label>
          <textarea id="password"></textarea>
        </li>
        <li>
          <button id="submit-signup">Submit</button>
        </li>
      </ul>
    </form>

    {{> footer}}
  </body>
</html>
